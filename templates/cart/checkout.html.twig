{% extends 'base.html.twig' %}
{% block title %}Checkout{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {{ form_start(checkout_form) }}
            {{ form_widget(checkout_form) }}
            {{ form_end(checkout_form) }}
        </div>
        <div class="col-md-8" align="right">
            <div class="row">
                <div class="col-md-12">
                    <a href="/remove-cart">CLEAR CART</a>
                </div>
            </div>
            <div class="row" align="right">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th>Sub Total</th>
                            <th style="text-align: right">{{ sub_total }}</th>
                        </tr>
                        <tr>
                            <th>Discount Amount</th>
                            <th style="text-align: right">{{ discount }}</th>
                        </tr>
                        <tr>
                            <th>Total Amount</th>
                            <th style="text-align: right">{{ total }}</th>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Book</th>
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Qty</th>
                <th scope="col">Amount</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
            <tr>
                <td><img style="height: 100px; width: 100px; display: block;" src="{{ asset('uploads/books/' ~ book['image']) }}" class="img-thumbnail" alt="Book Image"></td>
                <td>{{ book['name'] }}</td>
                <td>{{ book['author'] }}</td>
                <td>{{ book['category'] }}</td>
                <td>{{ (book['unit_price']) | number_format(2, '.', ',')  }}</td>
                <td>{{ book['qty'] }}</td>
                <td align="right">{{ (book['price']) | number_format(2, '.', ',')  }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}